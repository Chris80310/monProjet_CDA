{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <section class="container col-10 div_cat mt-5 py-5">
        <div class="row">
            <div class="col">
                {% for flash_error in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
				{% endfor %}

                <div class="card col-sm-3 mx-auto cat_count rounded p-3">
					<h1>Inscription</h1>
				</div>

                {{ form_errors(registrationForm) }}

            <div class="row text-center">
                {{ form_start(registrationForm) }}

                    <fieldset class="card m-5">
                        <legend class="my-3">
                            Mon identit√©
                        </legend>
                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.prenom) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe : ' }) }}
                    </fieldset>

                    <fieldset class="card m-5">
                        <legend class="my-3">
                            Mon adresse
                        </legend>
                        {{ form_row(registrationForm.livraison) }}
                        {{ form_row(registrationForm.checkbox) }}
                        {{ form_row(registrationForm.facturation) }}
                    </fieldset>
                    {# {{ form_row(registrationForm.RGPDConsent) }} #}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <button type="submit" class="btn btn-primary btn-lg my-3">M'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>

{% endblock %}
