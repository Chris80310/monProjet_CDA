{% extends 'base.html.twig' %}

{% block title %}sous_categories{% endblock %}

{% block body %}

 <div class="col-12">
        {# <h1>{{categories.libelle}}</h1> #}
        <h1>Sous-categories</h1>
    </div>

    {# {% for sc in categorie.sousCategories %} #}
    {% for s_categorie in s_categories %}
        <div class="col-12 col-sm-6 col-md-4 col-xl-3 mb-3">
            {# <a href="/produits/{{s_categories.id}}"> #}
            <a href="{{path('app_scat()', {"id" : s_categorie.id })}}">
