                <div class="card" style="">
                    <img src="{{asset ('assets/img/scat/' ~ categorie.getImgScat())}}" alt="image" srcset="" class="card-img-top img-fluid">
                    <div class="card-body">
                        {# <h5 class="card-title">{{ categorie.libelle }}</h5> #}
                        <h5 class="card-title">{{ s_categorie.getLibelleScat() }}</h5>
                    </div>
                </div>            
            </a>
        </div>
    {% endfor %}

{% endblock %}
